<?xml version="1.0" encoding="UTF-8"?>
<Simulation verbosity="debug">
    
	<RunInfo>
	    <WorkingDir>./results</WorkingDir>
	    <Sequence>extract_data3,pk3Load,RunPROM3,plot_data_3</Sequence>
	    <batchSize>1</batchSize>
	</RunInfo>
	
	<Files>
	    <Input name="ROM3pk" type="">ROM3pk</Input>
	</Files>
	
	<Distributions>
        <Normal name="v0_d">
            <mean>1.0</mean>
            <sigma>0.5</sigma>
            <lowerBound>0</lowerBound>
            <upperBound>3.0</upperBound>
        </Normal>
        <Normal name="angle_d">
            <mean>45</mean>
            <sigma>5</sigma>
            <lowerBound>5</lowerBound>
            <upperBound>85</upperBound>
        </Normal>
	</Distributions>
		
	<Models>
	    <ROM name="pROM3" subType="SciKitLearn">
	        <Features>v0,angle</Features>
            <Target>x,y,r,t</Target>
	        <SKLtype>linear_model|LinearRegression</SKLtype>
	        <fit_intercept>True</fit_intercept>
	        <normalize>False</normalize>
	    </ROM>
	</Models>
	
	<Samplers>
      <Grid name="Grid_ROM">
          <variable name="v0">
              <distribution>v0_d</distribution>
              <grid construction="equal" steps="4" type="CDF">0.1 0.9</grid>
          </variable>
          <variable name="angle">
              <distribution>angle_d</distribution>
              <grid construction="equal" steps="4" type="CDF">0.1 0.9</grid>
          </variable>
      </Grid>
	</Samplers>
	
	<Steps>
	    <IOStep name="extract_data3">
	        <Input   class="Databases"        type="HDF5"         >out_db</Input>
	        <Output  class="DataObjects"      type="PointSet"   >outGRID_y3</Output>
	    </IOStep>
	    <IOStep name="pk3Load">
	        <Input   class="Files"            type=""             >ROM3pk</Input>
	        <Output  class="Models"           type="ROM"          >pROM3</Output>
	    </IOStep>
	    <MultiRun name="RunPROM3">
	        <Input   class="DataObjects"      type="PointSet"     >Data1</Input>
	        <Model   class="Models"           type="ROM"          >pROM3</Model>
	        <Sampler class="Samplers"         type="Grid"         >Grid_ROM</Sampler>
	        <Output  class="DataObjects"      type="PointSet"   >outPROM_y3</Output>
	    </MultiRun>
	    <IOStep name="plot_data_3" pauseAtEnd="True">
	        <Input   class="DataObjects"      type="PointSet"   >outPROM_y3</Input>
	        <Input   class="DataObjects"      type="PointSet"   >outGRID_y3</Input>
	        <Output  class="OutStreams"       type="Plot"         >plot_ROM_RSy3</Output>
	        <Output  class="OutStreams"       type="Plot"         >plot_RSy3</Output>
	    </IOStep>
	</Steps>
	
	<Databases>
	    <HDF5 name="out_db" filename="out_db.h5" readMode="read" directory="./DatabaseStorage/"/>
	</Databases>
	
	<DataObjects>
	    <PointSet name="outGRID_y3">
	        <Input>v0,angle</Input>
	        <Output>x,y,r,t</Output>
	    </PointSet>
	    <PointSet name = "Data1">
	        <Input>v0,angle</Input>
	        <Output>OutputPlaceHolder</Output>
	    </PointSet>
	    <PointSet name="outPROM_y3">
	        <Input>v0,angle</Input>
	        <Output>x,y,r,t</Output>
	    </PointSet>
	    <PointSet name="outGRID_y4">
	        <Input>v0,angle</Input>
	        <Output>x,y,r,t</Output>
	    </PointSet>
	    <PointSet name="outROM_y4">
	        <Input>v0,angle</Input>
	        <Output>x,y,r,t</Output>
	    </PointSet>
	</DataObjects>
	
	<OutStreams>
	    <Plot name="plot_ROM_RSy3" overwrite="False">
	        <plotSettings>
	            <plot>
	                <type>scatter</type>
	                <x>outPROM_y3|Input|v0</x>
	                <y>outPROM_y3|Input|angle</y>
	                <z>outPROM_y3|Output|x</z>
	                <colorMap>outPROM_y3|Input|v0</colorMap>
	                <cmap>jet</cmap>
	            </plot>
	        </plotSettings>
	        <actions>
	            <how>png</how>
	            <title>
	                <text>Sampled Input Space: ROM3</text>
	            </title>
	        </actions>
	    </Plot>
	    <Plot name="plot_RSy3" overwrite="False">
	        <plotSettings>
	            <plot>
	                <type>scatter</type>
	                <x>outGRID_y3|Input|v0</x>
	                <y>outGRID_y3|Input|angle</y>
	                <z>outGRID_y3|Output|y</z>
	                <colorMap>outGRID_y3|Input|v0</colorMap>
	                <cmap>jet</cmap>
	            </plot>
	        </plotSettings>
	        <actions>
	            <how>png</how>
	            <title>
	                <text>Sampled Input Space: Function</text>
	            </title>
	        </actions>
	    </Plot>
	</OutStreams>

</Simulation>



